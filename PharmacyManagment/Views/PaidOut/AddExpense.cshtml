@model PharmacyManagment.Models.ViewModels.Expense.ExpenseVM
@{
    ViewBag.Title = "إجراء عملية صرف";
}
@if (TempData["SM"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SM"]
    </div> 
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-center">إجراء عملية صرف</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Expense_Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expense_Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Expense_Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Expense_Quantitative, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expense_Quantitative, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Expense_Quantitative, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ البيانات" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("مصروفات اليوم", "ShowToDayExpense" ,null , new { @class = "btn btn-info"})
</div>
