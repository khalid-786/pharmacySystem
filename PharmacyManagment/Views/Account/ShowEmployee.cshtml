@model IEnumerable<PharmacyManagment.Models.ViewModels.Account.EmployeeVM>

@{
    ViewBag.Title = "جميع الموظفين";
}
@using PagedList.Mvc;
@using PagedList;
<div class="alert alert-info text-center">
    <h2 style="color:#000;">قائمة جميع الموظفين و مدراء النظام </h2>
</div>

<p>
    @Html.ActionLink("إضافة موظف", "AddEmployee" ,null , new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("تعديل", "EditEmployee", new { id = item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("حذف", "DeleteEmployee", new { id = item.Id }, new { @class = "btn btn-danger delete" })
        </td>
    </tr>
}

</table>
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfEmployees, page => Url.Action("ShowEmployee", new { page }))
@section Scripts {
    
    <script>

$(function () {
    /*
    * Confirm Employee deletion
    */
    $("a.delete").click(function () {
        if (!confirm("هل أنت موافق على حذف هذا الموظف")) return false;
    });
    //////////////////////////////////////////////////////////////
});

</script>
    }
